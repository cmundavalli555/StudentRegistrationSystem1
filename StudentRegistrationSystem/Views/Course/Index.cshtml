@model List<Courses>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Courses List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create New Course</a>
        </div>
    </div>
</div>
<div>
    
  
</div>

<h1>Course Details</h1>
<table class = "table table-bordered  table-stripped">
    <thead>
         <tr>
        
             <th>Course ID</th>
             <th>Course Name</th>
             <th>CourseDescription</th>
         </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
      
            
            <tr>
                <td>@obj.CourseID</td>
                <td>@obj.CourseName</td>
                <td>@obj.CourseDescription</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Course" asp-action="Edit" asp-route-CourseId="@obj.CourseID" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Course" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
   
</table>