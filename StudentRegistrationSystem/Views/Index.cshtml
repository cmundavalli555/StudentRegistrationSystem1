@model List<Students>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Courses List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create student details
            </a>
        </div>
    </div>
</div>
<div>
</div>

<h1>Student Details</h1>
<table class="table table-bordered  table-stripped">
    <thead>
        <tr>

            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {


            <tr>
                <td>@obj.StudentID</td>
                <td>@obj.FirstName</td>
                <td>@obj.LastName</td>
                <td>@obj.Email</td>
                <td>@obj.Phonenumber</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Course" asp-action="Edit" asp-route-CourseId="@obj.StudentID" class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Course" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>